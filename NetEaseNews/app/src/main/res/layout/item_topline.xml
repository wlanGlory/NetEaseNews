<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/topline_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/topline_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/topline_img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/topline_img"
            android:text="456" />

        <ImageView
            android:id="@+id/topline_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/pull_down" />

        <TextView
            android:id="@+id/topline_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/topline_img"

            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/topline_img"


            android:text="新华社" />

        <TextView
            android:id="@+id/topline_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/topline_source"
            android:layout_toLeftOf="@id/topline_delete"
            android:text="置顶" />


    </RelativeLayout>


</LinearLayout>