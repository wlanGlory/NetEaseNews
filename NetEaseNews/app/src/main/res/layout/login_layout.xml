<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/colorTabSelected"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/login_back"
            android:src="@mipmap/icon_back"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="登录"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:textColor="#fff"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_user_login"
        android:hint="网易邮箱/手机号" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_lock"

        android:hint="密码" />

    <Button
        android:layout_marginTop="15dp"
        android:background="@drawable/person_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="还可以选择以下方式登录" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:drawableTop="@mipmap/wechat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="微信账号登录"
                android:layout_height="wrap_content" />
            <TextView
                android:drawableTop="@mipmap/weibo"
                android:layout_width="0dp"

                android:gravity="center"
                android:text="新浪微博登录"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:drawableTop="@mipmap/qq"
                android:layout_width="0dp"
                android:gravity="center"
                android:text="QQ账号登录"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/login_next"
                android:src="@mipmap/right_next"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/login_no_account"
                android:text="没有账号?"
                android:layout_alignBottom="@id/login_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/login_register_netease"
                android:text="注册网易邮箱"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/login_no_account"
                android:textColor="@color/colorTabSelected"
                android:layout_alignBottom="@id/login_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>



    </LinearLayout>
    </LinearLayout>


</LinearLayout>