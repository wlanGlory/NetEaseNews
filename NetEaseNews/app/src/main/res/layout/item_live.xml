<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >



    <TextView

        android:textSize="16sp"
        android:textColor="@color/live_title"
        android:id="@+id/live_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/live_title_margin_top"
         />

    <ImageView
        android:id="@+id/live_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/live_title"
        android:layout_marginTop="-25dp"

        android:layout_marginBottom="3dp"

        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_marginTop="@dimen/live_source_margin_top"
        android:id="@+id/live_source_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/live_img"

        android:textColor="#fff"
         />


    <ImageView
        android:id="@+id/live_video_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/live_img"
        android:layout_marginRight="@dimen/live_video_margin_right"
        android:layout_marginBottom="@dimen/live_video_margin_bottom"
        android:layout_marginTop="@dimen/live_video_margin_top"

        />

    <TextView
        android:id="@+id/live_review_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_alignTop="@id/live_video_img"
        android:layout_toLeftOf="@id/live_video_img"
        />

    <TextView
        android:id="@+id/live_time_tv"
        android:layout_width="wrap_content"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/live_review_tv"
        android:layout_toLeftOf="@id/live_review_tv"
         />

    <TextView
        android:id="@+id/live_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/live_date_margin_top"
        android:layout_below="@id/live_img"
        android:layout_toLeftOf="@id/live_time_tv"
         />


</RelativeLayout>


