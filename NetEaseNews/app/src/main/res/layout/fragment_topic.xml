<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dc4e4e"
        android:orientation="horizontal">

        <android.support.design.widget.TabLayout
            android:id="@+id/topic_tl"
            app:tabSelectedTextColor="@color/colorTopicTabSelected"
            app:tabIndicatorColor="@color/colorTopicTabSelected"
            android:layout_width="wrap_content"
            app:tabTextColor="@color/colorTabNormal"
            android:layout_height="wrap_content">

        </android.support.design.widget.TabLayout>
        <ImageView
            android:id="@+id/topic_search"
            android:layout_marginLeft="90dp"

            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/topic_search"
            />
        <ImageView
            android:id="@+id/topic_login"

            android:layout_marginLeft="30dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/topic_login"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/topic_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v4.view.ViewPager>

</LinearLayout>